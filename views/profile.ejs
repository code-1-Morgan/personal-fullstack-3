<!doctype html>
<html>
<head>
    <title>ChordBase</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-music"></span> ChordBase <span class="fa fa-music"></span></h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="row text-center"><h2>Build a custom database of guitar chords.</h2></div>
    <div class="row">
      <form action="/messages" method="POST" class="text-center">
        <label for="rootSelect">Choose a chord:</label>
        <select name="root" id="rootSelect">
            <option class='chordLetter' value="">-</option>
            <option class='chordLetter' value="a">A</option>
            <option class='chordLetter' value="b">B</option>
            <option class='chordLetter' value="c">C</option>
            <option class='chordLetter' value="d">D</option>
            <option class='chordLetter' value="e">E</option>
            <option class='chordLetter' value="f">F</option>
            <option class='chordLetter' value="g">G</option>
        </select>

        <!-- <select name="sign" id="signSelect">
          <option value="">-</option>
          <option value="natural">Natural</option>
          <option value="sharp">Sharp</option>
          <option value="flat">Flat</option>
        </select> -->
        <button type="submit">Submit</button>
      </form>



          
        <!-- <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div> -->


        <% } %>
        </div>

  
  
  <div class="col-sm-4">
    <h3>Your Chords</h3>
    <ul class="messages">
    <% for(var i=0; i<messages.length; i++) {%>
      <li class="message">
        <h3><%= messages[i].root %></h3>
        <h4><i class="fa fa-trash-o" aria-hidden="true"></i> Delete Chord</h4>
        <h4><i class="fa fa-eye" aria-hidden="true"></i> View Diagram</h4>
      </li>
    <% } %>
    </ul>
  </div>

  <div class="col-sm-8">
    <img src="" class="text-center" id="" style="height: 400px;"></h4>
  </div>
</div>

<script src="main.js"></script>

</body>
</html>
